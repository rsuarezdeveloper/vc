{% extends '::base.html.twig' %}
{%block page_header%}Reservas{% endblock %}
{% block body -%}
    <a href="{{ path('reserva_new') }}" class="btn btn-primary">
        <i class="icon-white icon-file"></i>
                Crear Nueva Reserva
            </a>
    <table class="table table-striped table-hovered">
        <thead>
            <tr>
                <th>Cliente</th>
                <th>Agencia</th>
                <th>Aerol&iacute;nea</th>
                <th>Creado Por</th>
                <th>Fecha S.</th>
                <th>Hora S.</th>
                <th>Guia Master</th>
                <th>Tempera</th>
                <th>Contacto</th>
                <th>Notas</th>
                <th>Piezas</th>
                <th>FBE</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            {% set piezas=0 %}
            {% set fbe=0 %}
            {%for p in entity.productos%}
                {%set piezas=piezas+p.piezas%}
                {%set fbe=fbe+p.fbe%}
            {% endfor%}
            <tr>
                <td>{{entity.cliente.nombre}}</td>
                <td>{{entity.agencia.nombre}}</td>
                <td>{{entity.aerolinea.nombre}}</td>
                <td>{{entity.creadoPor.nombre}}{% if entity.creacion %}<small>[{{ entity.creacion|date('Y-m-d H:i:s') }}]</small>{% endif %}</td>
                <td>{% if entity.fechaServicio %}{{ entity.fechaServicio|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.horaServicio|date('H:i') }}</td>
                <td>{{ entity.guiaMaster }}</td>
                <td>{{ entity.temperaturaRequerida }}</td>
                <td>{{ entity.contacto }}</td>
                <td>{{ entity.notas }}</td>
                <td>{{piezas}}</td>
                <td>{{fbe}}</td>
                <td><a href="{{ path('reserva_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i></a> {% if is_granted("ROLE_ADMIN") %}<i class="icon-cogs"></i> Confirmar{%endif%}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
