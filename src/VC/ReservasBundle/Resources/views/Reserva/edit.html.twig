
{% extends '::base.html.twig' %}
{%block page_header%}Editar Reserva{% endblock %}
{%block stylesheets%}
     {{ form_stylesheet(edit_form) }}
{% endblock %}
{% block body -%}
    <form action="{{ path('reserva_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} novalidate=novalidate>
        <input type="hidden" name="_method" value="PUT" />
       <table class="table">
            <tr>
                
                <td><label>Cliente</label>
                    {% if is_granted('ROLE_CUSTOMER') %}
                        <h4>{{entity.cliente.nombre}}</h4>
                        <div style="display: none">{{ form_widget(edit_form.cliente) }}</div>
                    {%else%}
                        {{ form_widget(edit_form.cliente) }}
                    {%endif%}
                </td>
                <td><label>Fecha de Servicio:</label>{{ form_widget(edit_form.fechaServicio) }}
                	<label>Sucursal Requerida:</label>{{ form_widget(edit_form.sucursal) }}
                </td>
                <td><label>Hora de Servicio:</label><div class="bootstrap-timepicker">
					{{ form_widget(edit_form.horaServicio) }}</div>
					 <label>Clasificacion:</label>{{ form_widget(edit_form.clasificacion) }}
				</td>
            </tr>
            <tr>
                <td><label>Guia Master:</label>{{ form_widget(edit_form.guiaMaster) }}
                <label>Temperatura Requerida:</label>{{ form_widget(edit_form.temperaturaRequerida) }}
                <label>Numero de Palet:</label>{{ form_widget(edit_form.noPalet) }}</td>

                <td><button class="btn btn-small" id="btn-nueva-hija" type="button"><i class='icon-plus'></i>Guias Hija</button>
                <table id="tbl-hijas">
                {%for hijas in entity.hijas%}
                 <tr>
                <td></td>
                <td><span id="guiaHija|{{hijas.id}}" title="Click para cambiar ">{{hijas.guiaHija}}</td>
                 </tr>
                 {%endfor%}
                </table>
                </td>
            </tr>
            <tr></tr>
            <tr>
                <td><a a href="javascript:void(0)" onclick="crearContacto();" rel="tooltip" title="Crear Nuevo Contacto"> <i class="icon-plus-sign"></i></a><label>Contacto Aerolinea:</label>{{ form_widget(edit_form.contactoAerolinea) }}</td>
                <td><label>Contacto Agencia:</label>{{ form_widget(edit_form.contactoAgencia) }}</td>
                <td><label>Contacto Cliente:</label>{{ form_widget(edit_form.contactoCliente) }}</td>
            </tr>
            <tr>
                <td><label>Agencia:</label>{{ form_widget(edit_form.agencia) }}</td>
                <td><label>Aerolinea:</label>{{ form_widget(edit_form.aerolinea) }}</td>
                <td><label>Notas:</label>{{ form_widget(edit_form.notas) }}</td>
            </tr>
            <tr>

            </tr>
        </table>
        {{form_rest(edit_form)}}
        {{form_errors(edit_form)}}
        <hr />
        <h3>Productos</h3>
        <button class="btn btn-small" id="btn-nuevo-producto" type="button"><i class='icon-plus'></i> Agregar Producto</button>
        <br  />
        <table id="tbl-productos">
            <tr>
                <th></th>
                <th>Producto</th>
                <th>Piezas</th>
                <th>FBE</th>
            </tr>
            {%for producto in entity.productos%}
            <tr>
                <td></td>
                <td><span id="nombreProducto|{{entity.id}}" title="Click para cambiar Nombre">{{producto.nombreProducto}}</span></td>
                <td style="text-align: right"><span id="piezas|{{entity.id}}" title="Click para cambiar Piezas">{{producto.piezas}}</td>
                <td style="text-align: right"><span id="fbe|{{entity.id}}" title="Click para cambiar fbe">{{producto.fbe}}</td>
            </tr>
            {%endfor%}
        </table>



        </table>

        
        <br clear="all" />
        <p>
            <button type="submit" class="btn btn-primary"><i class='icon-ok-circle icon-white'></i> Editar</button>
            <a href="{{ path('reserva') }}" class="btn">
                <i class="icon-list-ul"></i> 
                Regresar al listado
            </a>
        </p>
    </form>
<!--
        <form action="{{ path('reserva_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
-->
{% endblock %}
{% block javascripts%}
    {{form_javascript(edit_form)}}

    <script type="text/javascript" src="{{asset('css/jquery.jeditable.js')}}"></script>
    <script>
        $(document).ready(function(){

            $("span[id^=piezas],span[id^=fbe]").editable("{{path('editProductojei')}}",{
			indicator:'<i class="fa fa-refresh fa-spin"></i>',
			tooltip:"Editar Valor",
			onblur: "submit",
            width:'50px', // THIS DOES THE TRICK
            height:"16px", //THIS DOES THE TRICK

		});
            $("span[id^=nombreProducto]").editable("{{path('editProductojei')}}",{
			indicator:'<i class="fa fa-refresh fa-spin"></i>',
			tooltip:"Editar Valor",
			onblur: "submit",
            width:'150px', // THIS DOES THE TRICK
            height:"16px", //THIS DOES THE TRICK

		});
             $("span[id^=guiaHija]").editable("{{path('editHijajei')}}",{
			indicator:'<i class="fa fa-refresh fa-spin"></i>',
			tooltip:"Editar Valor",
			onblur: "submit",
            width:'200px', // THIS DOES THE TRICK
            height:"16px", //THIS DOES THE TRICK

		});
                var tr_producto='<tr><td><a href="#" class="delete"><i class="icon-trash"></i></a></td><td><input type="text" name="producto_nombre[]" id="producto_nombre[]" placeholder="Nombre Producto"/></td><td><input type="text" name="producto_piezas[]" id="producto_piezas[]" placeholder="0" dir="rtl" class="input-small"/></td><td><input type="text" name="producto_fbe[]" id="producto_fbe[]" placeholder="0" dir="rtl" class="input-small"/></td></tr>';
                $("#tbl-productos").append(tr_producto);
                $("#btn-nuevo-producto").click(function(){
                        $("#tbl-productos").append(tr_producto);
                });

                var tr_hijas='<tr><td><a href="#" class="delete"><i class="icon-trash"></i></a></td><td><input type="text" name="guiaHija[]" id="guiaHija[]" placeholder="Guia Hija"/></td></tr>';
                $("#tbl-hijas").append(tr_hijas);
                $("#btn-nueva-hija").click(function(){
                        $("#tbl-hijas").append(tr_hijas);
                });
                
                $(".delete").live('click', function(event) {
                        $(this).parent().parent().remove();
                });
                
                
            });
        
    </script>
{% endblock%}
